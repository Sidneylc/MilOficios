@model IEnumerable<MilOficios.Models.Lugar>

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ciudad)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ciudad)
                </td>
                <td>
                    <a href="#" onclick="miloficios.getModal('@Url.Action("Update", new { id = item.Codigo })');
                       return false;" data-toggle="modal" data-target="#modal-container"
                       class="btn btn-warning btn-sm">
                        <span class="glyphicon glyphicon-edit"> Edit </span>
                    </a>

                    <a href="#" onclick="miloficios.getModal('@Url.Action("Delete", new { id = item.Codigo })');
                       return false;" data-toggle="modal" data-target="#modal-container"
                       class="btn btn-danger btn-sm">
                        <span class="glyphicon glyphicon-trash"> Delete </span>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>